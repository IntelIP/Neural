# ============================================
# KALSHI TRADING AGENT - ENVIRONMENT TEMPLATE
# ============================================
# Copy this file to .env and fill in your values

# --- ENVIRONMENT ---
ENVIRONMENT=development  # development | staging | production
LOG_LEVEL=INFO          # DEBUG | INFO | WARNING | ERROR
DEBUG=false             # true | false

# --- KALSHI API ---
KALSHI_ENVIRONMENT=demo  # demo | prod
KALSHI_API_BASE=        # https://demo-api.kalshi.co/trade-api/v2 or production URL
KALSHI_WS_URL=          # wss://demo-api.kalshi.co/trade-api/ws/v2 or production URL
KALSHI_API_KEY_ID=      # Your Kalshi API key ID
KALSHI_PRIVATE_KEY=     # Your Kalshi private key (RSA format)

# --- REDIS ---
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# --- LLM CONFIGURATION ---
LLM_MODEL=google/gemini-2.5-flash
LLM_TEMPERATURE=0.2     # 0.0-1.0, lower = more deterministic
LLM_SEED=42            # For reproducible outputs
OPENROUTER_API_KEY=     # Your OpenRouter API key

# --- TRADING PARAMETERS ---
KELLY_FRACTION=0.25     # Kelly criterion safety factor (0.25 = 25% of Kelly)
RISK_PERCENTAGE=0.02    # Max risk per trade (2% of capital)
MAX_POSITION_SIZE=100   # Maximum position size in contracts
MAX_DAILY_LOSS=20       # Maximum daily loss percentage
STOP_LOSS_PERCENTAGE=0.10    # Stop loss trigger (10%)
TAKE_PROFIT_PERCENTAGE=0.30  # Take profit trigger (30%)

# --- DATA COLLECTION ---
DATA_COLLECTION_INTERVAL=300  # Seconds between data collections
MARKET_HISTORY_HOURS=24       # Hours of historical data to analyze
SENTIMENT_CACHE_TTL=3600      # Sentiment cache TTL in seconds

# --- AGENT CONFIGURATION ---
TOOL_CALL_LIMIT=20      # Max tool calls per agent request
AGENT_TIMEOUT=30        # Agent timeout in seconds

# --- EXTERNAL SERVICES ---
E2B_API_KEY=            # E2B sandbox API key (optional)
EXA_API_KEY=            # Exa search API key (optional)
TWITTER_BEARER_TOKEN=   # Twitter API bearer token (optional)
ESPN_API_KEY=           # ESPN API key (optional)

# --- AGENTUITY PLATFORM ---
AGENTUITY_SDK_KEY=      # Your Agentuity SDK key
AGENTUITY_PROJECT_KEY=  # Your Agentuity project key